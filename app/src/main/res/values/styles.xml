<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginTextViewOne">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/hacker_new_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginTextViewTwo">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/hacker_new_title_size</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
    </style>

    <style name="NewsIdTextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/news_id_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="NewsTitleTextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/news_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewsUrlTextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/news_url_text_size</item>
    </style>

    <style name="NewsTimestampTextView">
        <item name="android:textColor">@color/darker_grey</item>
        <item name="android:textSize">@dimen/news_time_text_size</item>
    </style>

    <style name="NewsCommentsCountTextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/news_comments_text_size</item>
    </style>

    <style name="CommentsDetailsTextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/comments_details_text_size</item>
    </style>

    <style name="TopLevelCommentsTextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/top_level_comment_text_size</item>
    </style>

    <style name="CommentStringTextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/comment_string_text_size</item>
    </style>

    <style name="NoArticlesTextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/no_articles_text_size</item>
    </style>

    <style name="StoryTitleParallaxTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/story_title_parallex_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StoryUrlParallaxTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/story_url_parallex_text_size</item>
    </style>

    <style name="StoryDateParallaxTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/story_date_parallex_text_size</item>
    </style>


</resources>
