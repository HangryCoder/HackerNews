<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/storyTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Introduction to HTML Components"
        android:theme="@style/StoryTitleParallaxTextView" />

    <TextView
        android:id="@+id/storyUrlTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="www.w3c.org"
        android:theme="@style/StoryUrlParallaxTextView" />

    <TextView
        android:id="@+id/storyDatePlusUserTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="4 Sept, 2017 . user01"
        android:theme="@style/StoryDateParallaxTextView" />

</LinearLayout>